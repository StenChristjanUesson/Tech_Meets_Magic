@model IEnumerable<TechMeetsMagic.Models.NonPlayerCharacters.AvatarIndexViewModels>


@{
    int rowNumber = 1;
}
<div>
    <a asp-action="add" asp-controller="Avatars" type="submit" class="btn btn-primary">Interact</a>
    <br />
    <a asp-action="Create" asp-controller="Avatars" type="submit" class="btn btn-primary">Create Avatars (Limited for now due to it being Delta version at best)</a>
</div>
@* User can interact with the npc's using add function, to well start an interaction. in controller, this is called "Npc Talk" *@

<div class="a1">Npc's Name</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                @* Later, once images have been implemented, add image aswell*@
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Level</th>
                <th scope="col">Admin Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Avatar in Model)
            {
                @* Later, once images have been implemented, add image aswell*@
                <tr>
                    <td>@rowNumber</td>
                    <td>@Avatar.AvatarName</td>
                    <td>@Avatar.AvatarDescribtion</td>
                    <td>@Avatar.AvatarType</td>
                    <td>@Avatar.AvatarLevel</td>
                    <td>
                        <a asp-action="details" asp-controller="Avatars" asp-route-id="@Npc.ID" class="btn btn-info">AvatarsDetails</a>

                        <a asp-action="Update" asp-controller="Avatars" asp-route-id="@Npc.ID" class="btn btn-info">AvatarsConfigure</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>