@model TechMeetsMagic.Models.NonPlayerCharacters.NpcCreateViewModels

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="CreatedAt" type="hidden"/>
        <input asp-for="UpdatedAt" type="hidden"/>
        <input asp-for="NPCLevel" value="1" type="hidden"/>
        <input asp-for="NPCStatus" value="Alive" type="hidden"/>
        
        <div class="form-group-row">
            <label asp-for="NPCName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NPCName" class="form-control"/>
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="NPCDescribtion" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NPCDescribtion" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="NpcType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NpcType" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="NPCMaxHP" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NPCMaxHP" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="NPCCurrentHP" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NPCCurrentHP" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="NPCAttackDamage" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NPCAttackDamage" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <div class="custom-file">
                    <input class="form-control custom-file-input"
                    asp-for="Files"
                    multiple type="file"
                    />
                    <label class="custom-file-label">Choose Images from device</label>
                </div>
            </div>
        </div>
        
        <a asp-action="create" asp-controller="NPCs" type="submit"
        class="btn btn-primary" value="Make NPC"></a>
        <a asp-action="index" class="btn btn-primary">Cancel</a>

    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileLabel = $(this).next('.custom-file-input');
                var files = $(this)[0].files;
                if (files.length > 1) {
                    files.html(files.length + ' files selected');
                }
                else if (files.length == 1) {
                    files.html(files[0].name);
                }
            });
        });
    </script>
}